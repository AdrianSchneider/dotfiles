# Requirements
sudo apt-get install -q -y git vim tmux

# Setup Config
cd ~
git clone https://github.com/AdrianSchneider/dotfiles.git
ln ~/dotfiles/.bash_aliases ~/.bash_aliases
ln ~/dotfiles/vim ~/.vim -s
ln ~/dotfiles/vim/.vimrc ~/.vimrc
ln ~/dotfiles/.tmux.conf ~/.tmux.conf

git config --global color.ui true
git config --global core.editor vim
git config --global user.name "Adrian Schneider"
git config --global user.email "siradrian@gmail.com"
git config --global core.excludesfile "/home/adrian/.gitignore"
git config --global alias.lg "log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --"


# Configure Vim
git clone https://github.com/gmarik/vundle.git ~/.vim/bundle/vundle/
vim +BundleInstall +qall
mkdir ~/.vim/colors
ln ~/.vim/bundle/wombat256.vim/colors/wombat256.vim ~/.vim/colors/wombat256.vim
