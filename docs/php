# Dependencies
sudo apt-get install -q -y libxml2-dev libcurl4-openssl-dev pkg-config libmcrypt-dev

# GD / Image Dependencies
sudo apt-get install -q -y mercurial libpng-dev libjpeg-dev cmake-curses-gui cmake
hg clone https://bitbucket.org/pierrejoye/gd-libgd
cd gd-libgd
mkdir build
cd build 
cmake ..
make
sudo make install
cd ../..


# Download PHP
wget http://ar2.php.net/distributions/php-5.3.23.tar.gz
tar xzvf php-5.3.23
cd php-5.3.23

./configure \
    --with-curl \
    --with-mhash \
    --with-intl \
    --with-gd \
    --with-pear \
    --with-apxs2=/usr/local/apache/bin/apxs \
    --with-openssl \
    --with-mysql=mysqlnd \
    --with-mysqli \
    --with-pdo-mysql \
    --with-jpeg-dir=/usr/lib/x86_64-linux-gnu/ \
    --enable-xdebug \
    --enable-zip \
    --enable-mbstring \
    --with-zlib \
    --with-mcrypt \
    --enable-pcntl \
    --enable-calendar \
    --enable-sockets

make && sudo make install
